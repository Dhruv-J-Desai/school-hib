<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/schoolCliHibernateMaven</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">password123</property>

        <!-- HikariCP Connection Pool Settings -->
        <!--        <property name="hibernate.hikari.minimumIdle">5</property>-->
        <!--        <property name="hibernate.hikari.maximumPoolSize">20</property>-->
        <!--        <property name="hibernate.hikari.idleTimeout">300000</property>-->
        <!--        <property name="hibernate.hikari.maxLifetime">1800000</property>-->
        <!--        <property name="hibernate.hikari.connectionTimeout">30000</property>-->
        <!--        <property name="hibernate.hikari.poolName">HibernateHikariCP</property>-->

        <!-- SQL Dialect -->
        <!-- <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property> -->

        <!-- Echo all executed SQL to stdout -->
        <property name="hibernate.show_sql">true</property>

        <!-- Format SQL nicely -->
        <property name="hibernate.format_sql">true</property>

        <property name="hibernate.use_sql_comments">true</property>

        <!-- Automatically create/update tables based on entity annotations -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Entity Classes option-1 -->
        <mapping class="com.reactivestax.courses.Course"/>
        <mapping class="com.reactivestax.students.Student"/>
        <mapping class="com.reactivestax.enrollments.Enrollment"/>
        <!--        <mapping class="io.reactivestax.entity.User" />-->
        <!--        <mapping class="io.reactivestax.entity.UserEager" />-->
        <!--        <mapping class="io.reactivestax.entity.Address" />-->
        <!--        <mapping class="io.reactivestax.entity.Order" />-->
        <!--        <mapping class="io.reactivestax.entity.OrderEager" />-->
        <!--        <mapping class="io.reactivestax.entity.Product" />-->
        <!--        <mapping class="io.reactivestax.entity.onetoone.jointable.Employee" />-->
        <!--        <mapping class="io.reactivestax.entity.onetoone.jointable.WorkStation" />-->

        <!-- Enable auto-detection of annotated classes (option-2)
        <property name="hibernate.archive.autodetection">class,hbm</property> -->

        <!-- Package to scan for entities
        <mapping package="io.reactivestax.entity" />-->


    </session-factory>
</hibernate-configuration>